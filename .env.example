APP_NAME=NakliyePark
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
# Production: APP_URL=https://yourdomain.com

APP_LOCALE=tr
APP_FALLBACK_LOCALE=tr
APP_FAKER_LOCALE=tr_TR

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=nakliyepark
DB_USERNAME=root
# MySQL şifrenizi yazın. Yerel kurulumda root şifresi boşsa boş bırakın; aksi halde "Access denied" log hataları oluşur.
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# E-posta: doğrulama ve şifre sıfırlama için gerçek mail gider. Geliştirmede log, canlıda smtp/ses kullanın.
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Süper admin: db:seed ile erkanulker0@gmail.com oluşturulurken kullanılır. Verilmezse "password".
# SUPER_ADMIN_PASSWORD=GizliSifrem123
# Tüm admin bildirimleri (yeni üye, nakliyeci kaydı, ihale, firma onayı, teklif vb.) bu adrese e-posta olarak gönderilir. Nakliyeci üye olunca bildirim ve mail bu adrese gider.
# SUPER_ADMIN_EMAIL=erkanulker0@gmail.com

# KVKK: Kişisel veri saklama süresi (ay). Kapalı ihaleler bu süre sonra silinebilir/anonimleştirilebilir.
KVKK_DATA_RETENTION_MONTHS=24

# Defter API (Admin > Defter API: harici sarı defter verisi çekmek için)
# Kendi sunucunuza yüklediğiniz defter-api.php tam URL’si (örn. https://example.com/defter-api.php)
# DEFTER_API_URL=
# Tarayıcıdan alınan oturum cookie’si (süresi dolunca F12 > Console > document.cookie ile yenileyin)
# DEFTER_API_COOKIE=
# DEFTER_API_FETCH_LIMIT=500

# OpenAI (Admin panelinde yapay zeka ile blog yazısı oluşturmak için)
# API key: https://platform.openai.com/api-keys
OPENAI_API_KEY=
# Opsiyonel: gpt-4o-mini (varsayılan, ucuz) veya gpt-4o (daha kaliteli)
# OPENAI_BLOG_MODEL=gpt-4o-mini

VITE_APP_NAME="${APP_NAME}"
